.row
  .span9
    %h3 Flight Plan
    %canvas#mission_map(width = '870' height = '556')
  #mission_rightpane.span3
    .mission_rightpane_label
      %h3 Mission Properties
      .btn-group#missions_dropdown
        %a.btn.btn-mini.dropdown-toggle(data-toggle="dropdown" href="#")
          Missions
          %span.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dropdownMenu")
          %li.divider
          %li
            %a(tabindex="-1" href="#") Create New
    %table#mission_properties.table.table-striped.table-bordered.table-condensed
      %tbody
        %tr
          %th Title
          %td.title.control-group
            %span.muted (None)
        %tr
          %th Created At
          %td.created_at.control-group
            %span.muted (None)
        %tr
          %th Center Lat
          %td.center_lat.control-group
            %span.muted (None)
        %tr
          %th Center Lon
          %td.center_lon.control-group
            %span.muted (None)
        %tr
          %th Zoom
          %td.zoom.control-group
            %span.muted (None)
        %tr
          %th Looping?
          %td.is_looping.control-group
            %span.muted (None)
        %tr
          %th Distance
          %td.distance.control-group
            %span.muted (None)

    %button#save_mission.btn.btn-mini.disabled.btn-primary.has-spinner(type='button') 
      Save
      %span.spinner
        %i.icon-spin.icon-refresh
    %button#delete_mission.btn.btn-mini.disabled.btn-danger.has-spinner(type='button')
      Delete
      %span.spinner
        %i.icon-spin.icon-refresh
    %button#run_mission.btn.btn-mini.disabled.btn-success.has-spinner(type='button') 
      Run
      %span.spinner
        %i.icon-spin.icon-refresh

    .mission_rightpane_label.voffset1
      %h3 Waypoint Properties
      .btn-group#waypoints_dropdown
        %a.btn.btn-mini.disabled.dropdown-toggle(data-toggle="dropdown" href="#")
          Waypoints
          %span.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dropdownMenu")
          %li.divider
          %li
            %a(tabindex="-1" href="#") Create New
    %table#waypoint_properties.table.table-striped.table-bordered.table-condensed
      %tbody
        %tr
          %th Offset
          %td.offset
            %span.muted (None)
        %tr
          %th Lat
          %td.lat
            %span.muted (None)
        %tr
          %th Lon
          %td.lon
            %span.muted (None)
        %tr
          %th Choose Location
          %td.choose_location
            %span.muted (None)
        %tr
          %th Length
          %td.length
            %span.muted (None)
    %button#delete_waypoint.btn.btn-mini.disabled.btn-danger(type='button') Delete
